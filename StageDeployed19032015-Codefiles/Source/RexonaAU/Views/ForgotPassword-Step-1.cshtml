@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using RexonaAU.Helpers;
@using umbraco.cms.businesslogic.member
@using umbraco.NodeFactory
@{
    Layout = "_Baselayout.cshtml";

    if (Member.IsLoggedOn())
    {
        Node dashboardNode = uQuery.GetNodesByType("MyDashboard").FirstOrDefault();
        if (dashboardNode != null && dashboardNode.Id > 0)
        {
            Response.Redirect(dashboardNode.NiceUrl);
        }
    }
    else
    {
        Common.SetNoBrowserCacheForpage();
        Common.CheckUserSessionValidity();
    }
    

}

@Html.Action("RenderForgotPassword", "ForgottenPassword")

