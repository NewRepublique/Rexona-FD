@font-face {
    font-family: 'sofia_problack';
    src: url('../fonts/family/sofiaproblack-webfont.eot');
    src: url('../fonts/family/sofiaproblack-webfont.eot?#iefix') format('embedded-opentype'),
         url('font/family/sofiaproblack-webfont.woff') format('woff'),
         
         url('../fonts/family/sofiaproblack-webfont.ttf') format('truetype'),
         url('../fonts/family/sofiaproblack-webfont.svg#sofia_problack') format('svg');
    font-weight: normal;
    font-style: normal;

}
